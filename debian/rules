#!/usr/bin/make -f

export DH_VERBOSE := 1

%:
	dh $@

override_dh_auto_clean:
	dh_auto_clean
	rm -f drivers_*/*

override_dh_auto_build:
	$(MAKE) gnuefi
	$(MAKE) fs_gnuefi

override_dh_auto_install:
	./debian/debinstall ./debian/refind

override_dh_installchangelogs:
	dh_installchangelogs NEWS.txt
